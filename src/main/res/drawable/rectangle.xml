<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- Remove the 'corners' element to make it a regular rectangle -->

    <stroke android:width="2dp"
        android:color="@color/black"
        />
    <!-- stroke for defining a border for view -->

    <size
        android:height="40dp"
        android:width="40dp"
        />
    <!-- size element is used to define a design here height & width are same means square with no rounded corners -->
</shape>
